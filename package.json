{
  "name": "CryptoBoot-ts",
  "version": "1.0.0",
  "main": "server/server.js",
  "author": "Tomasz Grabowski",
  "license": "MIT",
  "scripts": {
    "start": "node ./server/server.js",
    "nodemon": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "test": "jest --watchAll --coverage",
    "build:dev": "webpack",
    "build:prod": "webpack -p --env production",
    "heroku-postbuild": "yarn run build:prod"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.109",
    "@types/node": "^10.1.2",
    "@types/request": "^2.47.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "lodash": "^4.17.21",
    "request": "^2.87.0",
    "ts-loader": "^4.3.0",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "fast-deep-equal": "^2.0.1",
    "fs": "^0.0.1-security",
    "jest": "^22.4.4",
    "moq.ts": "^2.6.1",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.5",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.4"
  }
}
